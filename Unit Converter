<body>
    <h2>Unit Converter</h2>

    <label for="fahrenheit">Fahrenheit:</label>
    <input type="number" id="fahrenheit" placeholder="Enter Fahrenheit">

    <button onclick="convertToFahrenheit()">Convert to Celsius</button>

    <p id="resultCelsius"></p>

    <label for="celsius">Celsius:</label>
    <input type="number" id="celsius" placeholder="Enter Celsius">

    <button onclick="convertToCelsius()">Convert to Fahrenheit</button>

    <p id="resultFahrenheit"></p>

    <label for="meters">Meters:</label>
    <input type="number" id="meters" placeholder="Enter Meters">

    <button onclick="convertToFeet()">Convert to Feet</button>

    <p id="resultFeet"></p>

    <label for="feet">Feet:</label>
    <input type="number" id="feet" placeholder="Enter Feet">

    <button onclick="convertToMeters()">Convert to Meters</button>

    <p id="resultMeters"></p>

    <a href="index.html">Back to Homepage</a><br><br>

    <script>
        function convertToFahrenheit() {
            var fahrenheit = parseFloat(document.getElementById("fahrenheit").value);
            var celsius = (fahrenheit - 32) * (5 / 9);
            document.getElementById("resultCelsius").innerHTML = "Result in Celsius: " + celsius.toFixed(2) + " °C";
        }

        function convertToCelsius() {
            var celsius = parseFloat(document.getElementById("celsius").value);
            var fahrenheit = (celsius * (9 / 5)) + 32;
            document.getElementById("resultFahrenheit").innerHTML = "Result in Fahrenheit: " + fahrenheit.toFixed(2) + " °F";
        }

        function convertToFeet() {
            var meters = parseFloat(document.getElementById("meters").value);
            var feet = meters * 3.28084;
            document.getElementById("resultFeet").innerHTML = "Result in Feet: " + feet.toFixed(2) + " ft";
        }

        function convertToMeters() {
            var feet = parseFloat(document.getElementById("feet").value);
            var meters = feet / 3.28084;
            document.getElementById("resultMeters").innerHTML = "Result in Meters: " + meters.toFixed(2) + " m";
        }
    </script>
</body>

